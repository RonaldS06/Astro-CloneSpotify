---
import type { Playlist } from "../lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, color, artists, albumId } = playlist;

const artistsString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Imagen de ${title} by ${artistsString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col">
    <h4 class="">{title}</h4>
    <span class="text-sm text-gray-400">{artistsString}</span>
  </div>
</a>
